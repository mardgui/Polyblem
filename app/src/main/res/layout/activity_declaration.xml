<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F9F9FA"
        tools:context=".declaration.DeclarationActivity">

        <RelativeLayout
            android:id="@+id/category_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background">

            <Spinner
                android:id="@+id/category"
                style="@style/Widget.AppCompat.DropDownItem.Spinner"
                android:layout_width="match_parent"
                android:layout_height="35dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/category_layout"
            android:background="@drawable/background">

            <EditText
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/title"
                android:inputType="textPersonName"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/description_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_layout"
            android:background="@drawable/background">

            <EditText
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:hint="@string/description"
                android:inputType="textMultiLine"
                android:textSize="16sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/add_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description_layout"
            android:text="@string/add_image" />

        <RelativeLayout
            android:id="@+id/image_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_image"
            android:background="@drawable/background">

            <ImageView
                android:id="@+id/noImageAdded"
                android:layout_width="match_parent"
                android:layout_height="90dp" />

            <HorizontalScrollView
                android:id="@+id/title_horizontalScrollView"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_margin="1dp"
                android:fillViewport="false"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <GridView
                        android:id="@+id/grid_picture"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="none" />
                </LinearLayout>
            </HorizontalScrollView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/location_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_layout"
            android:background="@drawable/background">

            <Spinner
                android:id="@+id/location"
                style="@style/Widget.AppCompat.DropDownItem.Spinner"
                android:layout_width="match_parent"
                android:layout_height="35dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/location_detail_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/location_layout"
            android:background="@drawable/background">

            <EditText
                android:id="@+id/location_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/localisation_detail"
                android:inputType="textPersonName"
                android:textSize="16sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/urgency_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/location_detail_layout"
            android:background="@drawable/background">

            <TextView
                android:id="@+id/urgency"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/urgency"
                android:textSize="16sp" />

            <SeekBar
                android:id="@+id/urgencyValue"
                style="@android:style/Widget.DeviceDefault.Light.SeekBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:max="2"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:progress="1" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/email_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/urgency_layout"
            android:background="@drawable/background">

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:ems="10"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:textSize="16sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_layout"
            android:text="@string/send" />
    </RelativeLayout>

</ScrollView>

